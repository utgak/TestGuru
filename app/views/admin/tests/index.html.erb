<h1><%= t("Tricky Tests") %></h1>

<p><%= link_to 'New test', new_admin_test_path %></p>

<%= render 'shared/errors', resource: @test %>

<table class="table">
  <tr>
    <th class="sort-by-title pointer">
      <%= t("title") %>
      <%= octicon 'arrow-up', class: 'text-success' %>
      <%= octicon 'arrow-down', class: 'text-success' %>
    </th>
    <th><%= t("category") %></th>
    <th><%= t("level") %></th>
    <th><%= t("number_of_questions") %></th>
    <th colspan="3">Action</th>
  </tr>

  <%= render @tests %>

</table>

<%= javascript_tag "new SortTests(document.querySelector('.sort-by-title'))" %>
<%= javascript_tag "new FormInline(document.querySelectorAll('.form-inline-link'))" %>
