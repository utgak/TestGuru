<h1>Passing the <%= @test_passage.test.title %> test </h1>

<b>
  <%= @test_passage.current_question.title %>
</b>

<%= link_to I18n.t('create_gist'), "/test_passages/#{ @test_passage.id }/gist", method: :post %>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :title,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
    <% end %>

  <p>
    <%= form.submit I18n.t('next') %>
  </p>

  <p><%= test_progress(@test_passage) %></p>

  <p>
    <%= link_to I18n.t('back'), tests_path %>
  </p>

<% end %>